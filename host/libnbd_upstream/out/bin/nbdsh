# Test if /bin/sh supports exec -a option (only supported in bash 4.2
# and above, and not part of POSIX).
if /bin/sh -c 'exec -a test true' 2>/dev/null; then
    exec -a nbdsh python3 -mnbd "$@"
else
    exec          python3 -mnbd "$@"
fi
